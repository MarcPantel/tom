<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="tom.mapping.dsl.generator.FileEditorSelection"
            name="Tom Mapping">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="tom.mapping.dsl.generator.PackageExplorerSelection"
            name="Tom Mapping">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="tom.mapping.dsl.launch.FileEditorSelectionHandler"
            commandId="tom.mapping.dsl.generator.FileEditorSelection">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="tom.mapping.dsl.launch.PackageExplorerSelectionHandler"
            commandId="tom.mapping.dsl.generator.PackageExplorerSelection">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:#TextEditorContext?before=additions">
         <command
               commandId="tom.mapping.dsl.generator.FileEditorSelection"
               label="Generate Tom Mapping"
               style="push"
               tooltip="generate the tom mapping">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <command
               commandId="tom.mapping.dsl.generator.PackageExplorerSelection"
               label="Generate Tom Mapping"
               style="push"
               tooltip="generate the tom mapping">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.tmap">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
