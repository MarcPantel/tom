<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
              class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
              contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
              default="true"
              extensions="tmap"
              icon="icons/TomMapping.gif"
              id="tom.mapping.dsl.TomMapping"
              name="TomMapping Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="tom.mapping.dsl.TomMapping.validate">
         <activeWhen>
            <reference
                    definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="tom.mapping.dsl.TomMapping.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="tom.mapping.dsl.TomMapping" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="tom.mapping.dsl.TomMapping"
            name="TomMapping">
            <keywordReference id="tom.mapping.dsl.ui.keyword_TomMapping"/>
        </page>
        <page
            category="tom.mapping.dsl.TomMapping"
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="tom.mapping.dsl.TomMapping.coloring"
            name="Syntax Coloring">
            <keywordReference id="tom.mapping.dsl.ui.keyword_TomMapping"/>
        </page>
        <page
            category="tom.mapping.dsl.TomMapping"
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="tom.mapping.dsl.TomMapping.templates"
            name="Templates">
            <keywordReference id="tom.mapping.dsl.ui.keyword_TomMapping"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="tom.mapping.dsl.TomMapping"
            name="TomMapping">
            <keywordReference id="tom.mapping.dsl.ui.keyword_TomMapping"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="tom.mapping.dsl.ui.keyword_TomMapping"
            label="TomMapping"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="tom.mapping.dsl.TomMapping.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="tom.mapping.dsl.TomMapping.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="tmap">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="tmap">
        </resourceServiceProvider>
    </extension>
    
    <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="fr.loria.eclipse.jtom.ui.wizards"
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:tom.mapping.dsl.ui.wizard.TomMappingNewProjectWizard"
            icon="icons/TomMappingProject.gif"
            id="tom.mapping.dsl.ui.wizard.TomMappingNewProjectWizard"
            name="TomMapping Project"
            project="true"
            >
         <description>
            Create a new ECORE to TOM mapping project
         </description>
      </wizard>
   </extension>

    <!-- marker definitions for tom.mapping.dsl.TomMapping -->
    <extension
            id="tommapping.check.fast"
            name="TomMapping Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="tommapping.check.normal"
            name="TomMapping Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.normal"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="tommapping.check.expensive"
            name="TomMapping Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.expensive"/>
        <persistent value="true"/>
    </extension>

   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant">
      </participant>
   </extension>
   <extension
            point="org.eclipse.ui.preferencePages">
        <page
            category="tom.mapping.dsl.TomMapping"
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="tom.mapping.dsl.TomMapping.compiler.preferencePage"
            name="Compiler">
            <keywordReference id="tom.mapping.dsl.ui.keyword_TomMapping"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            category="tom.mapping.dsl.TomMapping"
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="tom.mapping.dsl.TomMapping.compiler.propertyPage"
            name="Compiler">
            <keywordReference id="tom.mapping.dsl.ui.keyword_TomMapping"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>

	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="tom.mapping.dsl.TomMapping.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
    <!-- quickfix marker resolution generator for tom.mapping.dsl.TomMapping -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="tom.mapping.dsl.ui.tommapping.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="tom.mapping.dsl.ui.tommapping.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="tom.mapping.dsl.ui.tommapping.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
    </extension>
   	<!-- Rename Refactoring -->
	<extension point="org.eclipse.ui.handlers">
		<handler 
			class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.IRenameElementHandler"
			commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
			<activeWhen>
				<reference
					definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
    <extension point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
         <command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
               style="push">
            <visibleWhen checkEnabled="false">
               <reference
                     definitionId="tom.mapping.dsl.TomMapping.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.preferencePages">
	    <page
	        category="tom.mapping.dsl.TomMapping"
	        class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
	        id="tom.mapping.dsl.TomMapping.refactoring"
	        name="Refactoring">
	        <keywordReference id="tom.mapping.dsl.ui.keyword_TomMapping"/>
	    </page>
	</extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="tom.mapping.dsl.TomMapping.compare.contentViewers"
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="tmap">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="tom.mapping.dsl.TomMapping.compare.contentMergeViewers"
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="tmap" label="TomMapping Compare">
     </viewer>
  </extension>
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="tom.mapping.dsl.TomMapping.editors.documentProviders"
            class="tom.mapping.dsl.ui.TomMappingExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="tmap">
    </provider>
  </extension>

</plugin>
