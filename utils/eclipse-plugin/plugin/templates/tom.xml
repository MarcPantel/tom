<templates>

	<template 
		context="fr.loria.eclipse.jtom.template.tom" 
		description="%tom.template.match.desc" 
		id="fr.loria.eclipse.jtom.template.tom.match" 
		name="%tom.template.match.name">%match (${sort} ${varName}){
			${op} -> { ${cursor} }
}</template>
		<template 
		context="fr.loria.eclipse.jtom.template.tom" 
		description="%tom.template.strategy.desc" 
		id="fr.loria.eclipse.jtom.template.tom.strategy" 
		name="%tom.template.strategy.name">%strategy ${MyStrat}() extends Identity()/Fail(){ 
  	visit MyTerm {
  	  MyPattern -> { } 
 	 } 
}</template>
	<template 
		context="fr.loria.eclipse.jtom.template.tom" 
		description="%tom.template.include.desc" 
		id="fr.loria.eclipse.jtom.template.tom.include" 
		name="%tom.template.include.name">%include { ${include} }
</template>
<template 
		context="fr.loria.eclipse.jtom.template.tom" 
		description="%tom.template.typeterm.desc" 
		id="fr.loria.eclipse.jtom.template.tom.typeterm" 
		name="%tom.template.typeterm.name">  %typeterm ${newType} {
   implement { ${Type} }
   is_sort(t) { t instanceof ${Type} }
   equals(t1,t2) { t1.equals(t2) }
 }</template>
<template 
		context="fr.loria.eclipse.jtom.template.tom" 
		description="%tom.template.op.desc" 
		id="fr.loria.eclipse.jtom.template.tom.op" 
		name="%tom.template.op.name"> %op ${Type} newOp(${params:Type} ) { ${op} }
 
</template>
<template 
		context="fr.loria.eclipse.jtom.template.tom" 
		description="%tom.template.gom.desc" 
		id="fr.loria.eclipse.jtom.template.tom.gom" 
		name="%tom.template.gom.name">%gom { module MyModule
		}
 
</template>
	

