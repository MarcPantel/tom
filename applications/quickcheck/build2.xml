<?xml version="1.0" encoding="UTF-8"?>
<project name="quickcheck" default="build" basedir=".">
  <description>
    Quickcheck checker
  </description>
  <property name="javacSource" value="1.5"/>
  <property name="javacTarget" value="1.5"/>
  <property name="optimize"   value="off"/> 
  <property name="optimize2"   value="off"/>
  <property name="inline"   value="on"/>
 
  <property environment="env"/>
  <property name="tom.home" value="${env.TOM_HOME}"/>
  <import file="${tom.home}/lib/tom-common.xml"/>

  <property name="quickcheck.dir"      location="."/>
  <property name="quickcheck.src"      location="src"/>
  <property name="quickcheck.gen"      location="gen"/>
  <property name="quickcheck.build"    location="build"/>

  <target name="init" depends="tom.init">
    <mkdir dir="${quickcheck.build}"/>
    <mkdir dir="${quickcheck.gen}"/>
  </target>

  <target name="build" depends="init">
    <gom.preset 
      srcdir="${quickcheck.src}"
      destdir="${quickcheck.gen}">
      <include name="**/*.gom"/>
    </gom.preset>

    <tom.preset srcdir="${quickcheck.src}"
      options="--genIntrospector"
      destdir="${quickcheck.gen}">
      <include name="**/*.t"/>
      <exclude name="**/Representation.t"/>
      <exclude name="**/RandomizerGenerator.t"/>
      <exclude name="**/RandomTermGeneration.t"/>
      <exclude name="**/Main.t"/>
      <exclude name="**/Bug.t"/>
      <exclude name="**/BugLight.t"/>
    </tom.preset>

    <javac.preset destdir="${quickcheck.build}" fork="yes">
      <src path="${quickcheck.src}"/>
      <src path="${quickcheck.gen}"/>
      <classpath refid="tom.classpath"/>
      <include name="**/*.java"/>
    </javac.preset>
  </target>

  <target name="clean" description="make clean">
    <delete dir="${quickcheck.gen}"/>
    <delete dir="${quickcheck.build}"/>
  </target>
</project>

