<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE platform [
  <!ELEMENT platform (plugins,optionmanager)>

  <!ELEMENT plugins (plugin*)>

  <!ELEMENT plugin EMPTY>
  <!ATTLIST plugin
    name CDATA #IMPLIED
    version CDATA #IMPLIED
    description CDATA #IMPLIED
    class CDATA #REQUIRED>

  <!ELEMENT optionmanager (options)>
	<!ATTLIST optionmanager
    class CDATA #REQUIRED>

	<!ELEMENT options (boolean*,integer*,string*)>

  <!ELEMENT boolean EMPTY>
  <!ATTLIST boolean
    name CDATA #REQUIRED
    altName CDATA ''
    description CDATA ''
    value (true|false) #REQUIRED>

  <!ELEMENT integer EMPTY>
  <!ATTLIST integer
    name CDATA #REQUIRED
    altName CDATA ''
    description CDATA ''
    value CDATA #REQUIRED
    attrName CDATA #REQUIRED>

  <!ELEMENT string EMPTY>
  <!ATTLIST string
    name CDATA #REQUIRED
    altName CDATA ''
    description CDATA ''
    value CDATA #REQUIRED
    attrName CDATA #REQUIRED>
]>

<platform>

  <plugins>
    <plugin name='Starter'
						version=''
						description='Only here to initialize the environment'
						class='vas.starter.VasStarter'/>		 
		<plugin name='Parser'
						class='vas.parser.VasParserPlugin'/>
		<plugin name='Expander'
						class='vas.expander.VasExpanderPlugin'/>
		<plugin name='Backend'
						class='vas.backend.VasBackend'/>
		</plugins>
		<optionmanager class='vas.VasOptionManager'>
		  <options>
			  <boolean name='help'
								 altName='h'
								 description='Show this help'
								 value='false'/>
			  <boolean name='version'
								 altName='V'
								 description='Print version'
								 value='false'/>
				<boolean name='verbose'
								 altName='v'
								 description='Display compilation information'
								 value='false'/>
				<boolean name='intermediate'
								 altName='i'
								 description='Leave generated ADT file'
								 value='false'/>
				<boolean name='jtype'
								 altName='j'
								 description='Added suffix to generated api'
								 value='false'/>
				<boolean name='eclipse'
								 altName=''
								 description='Sets Eclipse mode'
								 value='false'/>
				<string name='package'
								altName='p'
								description='Specify package name (optional)'
								value=''
								attrName='pack'/>
				<string name='output'
								altName='o'
								description='Set adt output file name equivalent to intermediate'
								value=''
								attrName='file'/>
				<string name='destdir'
								altName='d'
								description='Specify where to place generated files'
								value='.'
								attrName='dir'/>
				<string name='name'
								altName='n'
								description='Specify api name'
								value=''
								attrName='name'/>
				<string name="import"
								altName="I"
								description="Path for %include"
								value=""
								attrName="path"/>
	  </options>
  </optionmanager>
</platform>
