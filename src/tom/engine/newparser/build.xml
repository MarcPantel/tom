<?xml version="1.0" encoding="UTF-8"?>

<project name="newparser" default="compile" basedir=".">

  <property environment="env"/>

  <property name="jtom"           location="../../../.."/>

  <property name="tom.home"       location="${jtom}/src/dist"/>
  <property name="tom.src"        location="${jtom}/src"/>
  <property name="tom.gen"        location="${jtom}/src/gen"/>
  <property name="tom.build"      location="${jtom}/src/build"/>

  <property name="newparser.package" value="tom/engine/newparser"/>

  <property name="newparser.src"   location="${tom.src}/${newparser.package}"/>
  <property name="newparser.gen"   location="${tom.gen}/${newparser.package}"/>
  <property name="newparser.build" location="${tom.build}/${newparser.package}"/> 

  <import file="${tom.home}/lib/tom-common.xml"/>

  <!-- should go in tom-common.xml one of these days -->
  <taskdef name="antlr3"
           classname="org.apache.tools.ant.antlr.ANTLR3">
  </taskdef>

  <target name="makedirs" depends="tom.init">
    <mkdir dir="${newparser.gen}"/>
    <mkdir dir="${newparser.gen}/parser"/>
  </target>

  <target name="gom" depends="makedirs">
    <gom.preset srcdir="${tom.src}"
               destdir="${tom.gen}">
      <include name="${newparser.package}/parser/miniTom.gom"/>
    </gom.preset>
  </target>

  <target name="gomantlradapter" depends="gom">
    <gomantlradapter.preset srcdir="${tom.src}"
                           destdir="${tom.gen}"
                           package="${newparser.package}/parser">
      <include name="${newparser.package}/parser/miniTom.gom"/>
    </gomantlradapter.preset>
  </target>

  <target name="antlr" depends="gomantlradapter">
    <antlr3 target="${tom.src}/${newparser.package}/parser/miniTom.g"
            outputdirectory="${tom.gen}/${newparser.package}/parser"
            libdirectory="${tom.gen}/${newparser.package}/parser/minitom"
            />
  </target>

  <target name="compile" depends="antlr">
    <mkdir dir="${newparser.build}"/>
    <javac.preset destdir="${newparser.build}" >
      <src path="${newparser.gen}"/>
      <src path="${newparser.src}"/>
      <include name="**/*.java"/>
    </javac.preset>
  </target>

  <target name="force">
    <antcall target="clean"/>
    <antcall target="compile"/>
  </target>

  <target name="clean">
    <delete dir="${newparser.gen}"/>
    <delete dir="${newparser.build}"/>
  </target>

</project>
