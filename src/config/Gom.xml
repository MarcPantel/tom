<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE platform [
<!ELEMENT platform (plugins,optionmanager)>

  <!ELEMENT plugins (plugin*)>

  <!ELEMENT plugin EMPTY>
  <!ATTLIST plugin
    name CDATA #IMPLIED
    version CDATA #IMPLIED
    description CDATA #IMPLIED
    class CDATA #REQUIRED>

  <!ELEMENT optionmanager (options)>
  <!ATTLIST optionmanager
    class CDATA #REQUIRED>

  <!ELEMENT options (boolean*,integer*,string*)>

  <!ELEMENT boolean EMPTY>
  <!ATTLIST boolean
    name CDATA #REQUIRED
    altName CDATA ''
    description CDATA ''
    value (true|false) #REQUIRED>

  <!ELEMENT integer EMPTY>
  <!ATTLIST integer
    name CDATA #REQUIRED
    altName CDATA ''
    description CDATA ''
    value CDATA #REQUIRED
    attrName CDATA #REQUIRED>

  <!ELEMENT string EMPTY>
  <!ATTLIST string
    name CDATA #REQUIRED
    altName CDATA ''
    description CDATA ''
    value CDATA #REQUIRED
    attrName CDATA #REQUIRED>
]>

<platform>
  <plugins>
    <plugin name='Starter'
            version=''
            description='Only here to initialize the environment'
            class='tom.gom.starter.Starter'/>
    <plugin name='ANTLRMapperGomParser'
      class='tom.gom.parser.ANTLRMapperGomParserPlugin'/>
    <plugin name='Expander'
            class='tom.gom.expander.GomExpanderPlugin'/>
    <plugin name='TypeExpander'
            class='tom.gom.expander.GomTypeExpanderPlugin'/>
    <plugin name='ReferenceExpander'
            class='tom.gom.expander.GomReferenceExpanderPlugin'/>
    <plugin name='Compiler'
            class='tom.gom.compiler.CompilerPlugin'/>
    <plugin name='Backend'
            class='tom.gom.backend.GomBackendPlugin'/>
  </plugins>
  <optionmanager class='tom.gom.GomOptionManager'>
    <options>
      <boolean name='help'
               altName='h'
               description='Show this help'
               value='false'/>
      <boolean name='version'
               altName='V'
               description='Print version'
               value='false'/>
       <boolean name='verbose'
               altName='v'
               description='Display compilation information'
               value='false'/>
      <boolean name='reference'
               altName='r'
               description='Add references to the Gom signature'
               value='false'/>
      <boolean name='debug'
               altName='vv'
               description='Display debugging info'
               value='false'/>
      <boolean name='verbosedebug'
               altName='vvv'
               description='Display even more debugging info'
               value='false'/>
      <string name='package'
              altName='p'
              description='Specify package name (optional)'
              value=''
              attrName='packageName'/>
      <boolean name="wall"
               altName="W"
               description="Print warning"
               value="false"/>
      <string name='destdir'
              altName='d'
              description='Specify where to place generated files'
              value='.'
              attrName='dir'/>
      <string name="import"
              altName="I"
              description="Path for include"
              value=""
              attrName="path"/>
      <boolean name="intermediate" altName="i"
               description="Generate intermediate files"
               value="false"/>
    </options>
  </optionmanager>
</platform>
