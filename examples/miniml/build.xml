<?xml version="1.0" encoding="UTF-8"?>
<project name="miniml" default="build" basedir=".">
  <description>
    The miniml proof assistant
  </description>
  <property name="javacSource" value="1.5"/>
  <property name="javacTarget" value="1.5"/>
  <property name="optimize"   value="on"/> 
  <property name="optimize2"   value="off"/>
 
  <property environment="env"/>
  <property name="tom.home" value="${env.TOM_HOME}"/>
  <import file="${tom.home}/lib/tom-common.xml"/>

  <property name="miniml.dir"      location="."/>
  <property name="miniml.src"      location="src"/>
  <property name="miniml.gen"      location="gen"/>
  <property name="miniml.build"    location="build"/>


  <target name="init" depends="tom.init">
    <mkdir dir="${miniml.build}"/>
    <mkdir dir="${miniml.gen}"/>
  </target>

  <target name="build" depends="init">
    <gom config="${gomconfigfile}"
         srcdir="${miniml.src}"
         destdir="${miniml.gen}">
      <include name="*.gom"/>
    </gom>
    <tom.preset outputfile="${miniml.gen}/MlWalker.g"
                options="-I ${miniml.gen}"
                srcdir="${miniml.src}"> 
      <include name="MlWalker.g.t"/>
    </tom.preset>
   <taskdef name="antlr3"
             classname="org.apache.tools.ant.antlr.ANTLR3">
      <classpath refid="tom.classpath"/>
    </taskdef>
    <tom.preset srcdir="${miniml.src}"
      destdir="${miniml.gen}">
      <include name="**/*.t"/>
      <exclude name="**/*.g.t"/>
    </tom.preset>
    <antlr3 target="${miniml.src}/Ml.g"
            outputdirectory="${miniml.gen}">
	    <classpath refid="tom.classpath"/>
    </antlr3>
    <antlr3 target="${miniml.gen}/MlWalker.g"
            outputdirectory="${miniml.gen}">
	    <classpath refid="tom.classpath"/>
    </antlr3>
    
    <javac.preset destdir="${miniml.build}">
      <src path="${miniml.gen}:${miniml.src}"/>
      <classpath refid="tom.classpath"/>
      <include name="**/*.java"/>
    </javac.preset>
  </target>

  <target name="clean" description="make clean">
    <delete dir="${miniml.gen}"/>
    <delete dir="${miniml.build}"/>
  </target>
</project>
