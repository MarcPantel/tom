<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the miniml example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="example" value="miniml"/>
  <target name="build" depends="init">
    <mkdir dir="${examples.gen}/${example}"/>
    <gomcompile example="${example}"/>
    <taskdef name="antlr3"
             classname="org.apache.tools.ant.antlr.ANTLR3">
      <classpath refid="tom.classpath"/>
    </taskdef>
    <tom.preset outputfile="${examples.gen}/${example}/Lambda.g"
                options="-I ${examples.gen}/${example}"
                srcdir="${examples.dir}"> 
                <include name="${example}/**/Lambda.g.t"/>
    </tom.preset>
    <antlr3 target="${examples.gen}/${example}/Lambda.g"
            outputdirectory="${examples.gen}/${example}"
            libdirectory="${examples.gen}/${example}"
            multithreaded="true">
      <classpath refid="tom.classpath"/>
    </antlr3>
    <tom.preset options="-I ${examples.gen}/${example}"
                srcdir="${examples.dir}"
                destdir="${examples.gen}"> 
                <include name="${example}/*.t"/>
                <exclude name="${example}/*.g.t"/>
    </tom.preset>
    <javac.preset destdir="${examples.build}"
                  srcdir="${examples.gen}/${example}">
      <classpath refid="tom.examples.classpath"/>
      <include name="**/*.java"/>
    </javac.preset>
  </target>

  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
      update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${example}/*.t"/>
        <include name="${example}/*.java"/>
        <include name="${example}/*.gom"/>
        <include name="${example}/*.xml"/>
        <include name="${example}/*.g"/>
      </zipfileset>
    </zip>
  </target>
</project>
