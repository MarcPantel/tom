<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the structure example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="structure" value="structure"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${structure}"/>
    <delete dir="${examples.build}/${structure}"/>
  </target>
  <target name="build" depends="init">
    <!-- build adt -->    
    <gomcompile example="${structure}"/>
    <!-- build tom -->
    <tom.preset srcdir="${examples.dir}"
                destdir="${examples.gen}">
      <!-- stamp not yet ready for apigen list -->
      <include name="${structure}/**/*.t"/>
      <exclude name="${structure}/**/StructuresParser.g.t"/>
      <!--      <exclude name="${structure}/**/StructureCDT.t"/> -->
    </tom.preset>
    <tom.preset outputfile="${examples.gen}/${structure}/StructuresParser.g"
                options="-I ${examples.gen}/${structure}"
                srcdir="${examples.dir}"> 
      <include name="${structure}/**/StructuresParser.g.t"/>
    </tom.preset>
    <!-- build parser -->
    <mkdir dir="${examples.gen}/${structure}"/>
    <tomantlr target="${examples.gen}/${structure}/StructuresParser.g"
              outputdirectory="${examples.gen}/${structure}">
      <classpath refid="tom.classpath"/>
    </tomantlr>
    <!-- build java source -->
    <javacompile example="${structure}"/>
    <!-- copy resources -->
    <copy todir="${examples.build}/${structure}">
      <fileset dir="${examples.dir}/${structure}">
        <include name="examples"/>
      </fileset>
    </copy>
    <!-- Create a jar for the applet -->
    <path id="strategy.path"> <!-- ugly hack to find the jar -->
      <fileset dir="${tom.home}/lib">
        <include name="strategy*.jar"/>
      </fileset>
    </path>
    <property name="strategy.jar" refid="strategy.path"/>
    <jar jarfile="${examples.build}/${structure}/structure.jar">
      <fileset dir="${examples.build}">
        <include name="${structure}/**/*.class"/>
        <include name="${structure}/**/*.gif"/>
      </fileset>
      <zipfileset src="${tom.home}/lib/shared-objects.jar"/>
      <zipfileset src="${tom.home}/lib/jjtraveler.jar"/>
      <zipfileset src="${tom.home}/lib/antlr.jar"/>
      <zipfileset src="${strategy.jar}" includes="tom/library/strategy/mutraveler/MuVisitable.class"/>
      <zipfileset src="${tom.home}/lib/aterm.jar"/>
    </jar>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${structure}/*.t"/>
        <include name="${structure}/*.gom"/>
        <include name="${structure}/*.tom"/>
        <include name="${structure}/*.java"/>
        <include name="${structure}/examples*"/>
      </zipfileset>
    </zip>
  </target>
</project>
