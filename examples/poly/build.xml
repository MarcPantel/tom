<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the skel example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="poly" value="poly"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${poly}"/>
    <delete dir="${examples.build}/${poly}"/>
  </target>
  <target name="build" depends="init">
    <gomcompile example="${poly}"/>
    <tomcompile example="${poly}"/>
    <javacompile example="${poly}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
         <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
           <include name="${poly}/*.t"/>
           <include name="${poly}/Poly.signature"/>
           <include name="${poly}/*.gom"/>
      </zipfileset>
    </zip>
  </target>

</project>
