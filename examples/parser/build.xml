<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the parser example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="example" value="parser"/>
  <target name="build" depends="init">
    <gom.preset srcdir="${examples.dir}"
      destdir="${examples.gen}">
      <include name="${example}/Rule.gom"/>
    </gom.preset>
    <gom.preset srcdir="${examples.dir}"
      termgraph="true" 
      destdir="${examples.gen}">
      <include name="${example}/Term.gom"/>
    </gom.preset>
    <gomantlradapter.preset
      srcdir="${examples.dir}"
      destdir="${examples.gen}"
      package="${example}"
      grammar="Rule">
      <include name="${example}/**/Rule.gom"/>
    </gomantlradapter.preset>
    <gomantlradapter.preset
      srcdir="${examples.dir}"
      destdir="${examples.gen}"
      package="${example}"
      termgraph="true" 
      grammar="Graph">
      <include name="${example}/**/Term.gom"/>
    </gomantlradapter.preset>
    <!-- build parser -->
    <tom.preset outputfile="${examples.gen}/${example}/Rule.g"
                options="-I ${examples.gen}/${example}"
                srcdir="${examples.dir}"> 
      <include name="${example}/Rule.g.t"/>
    </tom.preset>
    <tom.preset outputfile="${examples.gen}/${example}/Graph.g"
                options="-I ${examples.gen}/${example}"
                srcdir="${examples.dir}"> 
      <include name="${example}/Graph.g.t"/>
    </tom.preset>
    <tomcompile/>
    <mkdir dir="${examples.gen}/${example}"/>
    <taskdef name="antlr3"
             classname="org.apache.tools.ant.antlr.ANTLR3">
      <classpath refid="tom.classpath"/>
    </taskdef>
    <antlr3 target="${examples.gen}/${example}/Rule.g"
            outputdirectory="${examples.gen}/${example}"
            libdirectory="${examples.gen}/${example}"
            multithreaded="true">
      <classpath refid="tom.classpath"/>
    </antlr3>
    <antlr3 target="${examples.gen}/${example}/Graph.g"
            outputdirectory="${examples.gen}/${example}"
            libdirectory="${examples.gen}/${example}"
            multithreaded="true">
      <classpath refid="tom.classpath"/>
    </antlr3>
    <javacompile/>
  </target>
  <property name="distribute" value="yes"/>
</project>
