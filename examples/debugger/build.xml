<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the debugger example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="debugger" value="debugger"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${debugger}"/>
    <delete dir="${examples.build}/${debugger}"/>
  </target>
  <target name="build" depends="init">
    <tomcompile example="${debugger}"/>
    <javacompile example="${debugger}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${debugger}/*.t"/>
      </zipfileset>
    </zip>
  </target>
</project>
