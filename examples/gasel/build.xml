<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the gasel example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="gasel" value="gasel"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${gasel}"/>
    <delete dir="${examples.build}/${gasel}"/>
  </target>
  <target name="build" depends="init">
  <!-- copy resources in build -->
    <copy todir="${examples.build}/${gasel}">
      <fileset dir="${examples.dir}/${gasel}">
      </fileset>
    </copy>
    <tomcompile example="${gasel}"/>
    <javacompile example="${gasel}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <!-- not in the distribution -->
  </target>
</project>
