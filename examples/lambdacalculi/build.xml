<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the lambdacalculi example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="lambdacalculi" value="lambdacalculi"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${lambdacalculi}"/>
    <delete dir="${examples.build}/${lambdacalculi}"/>
  </target>
  <target name="build" depends="init">
    <gom.preset srcdir="${examples.dir}"
      package="${lambdacalculi}" 
      termgraph="true" 
      destdir="${examples.gen}">
      <include name="${lambdacalculi}/lambdaterm.gom"/>
    </gom.preset>
    <tom.preset outputfile="${examples.gen}/${lambdacalculi}/LambdaTermParser.g"
                options="-I ${examples.gen}/${lambdacalculi}"
                srcdir="${examples.dir}"> 
                <include name="${lambdacalculi}/**/LambdaTermParser.g.t"/>
    </tom.preset>
    <mkdir dir="${examples.gen}/${lambdacalculi}"/>
    <tomantlr target="${examples.gen}/${lambdacalculi}/LambdaTermParser.g"
      outputdirectory="${examples.gen}/${lambdacalculi}">
      <classpath refid="tom.classpath"/>
    </tomantlr>

    <tomcompile example="${lambdacalculi}"/>
    <javacompile example="${lambdacalculi}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <!-- not in the distribution -->
  </target>
</project>
