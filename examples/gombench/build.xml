<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the gombench example" default="build" basedir="..">
  <import file="../common.xml"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/gombench"/>
    <delete dir="${examples.build}/gombench"/>
  </target>
  <target name="build" depends="init">
    <gomcompile example="gombench"/>
    <tom.preset srcdir="${examples.dir}"
                destdir="${examples.gen}">          
      <include name="gombench/**/*.t"/>
      <exclude name="gombench/**/erat.t"/>
    </tom.preset>
    <tom.preset srcdir="${examples.dir}"
	        destdir="${examples.gen}/gombench"         
                stamp="off" 
                options="--cCode -I ${tom.home}/share/jtom">
      <include name="gombench/**/erat.t"/>
    </tom.preset>
    <javacompile example="gombench"/>
    <copy todir="${examples.build}/gombench">
      <fileset dir="${examples.dir}/gombench">
        <include name="*.sh"/>
      </fileset>
    </copy>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="gombench/*.t"/>
        <include name="gombench/**/*.tom"/>
        <include name="gombench/**/*.java"/>
        <include name="gombench/*.gom"/>
      </zipfileset>
    </zip>
  </target>
</project>
