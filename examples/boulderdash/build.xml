<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the boulderdash example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="example" value="boulderdash"/>
  <target name="build" depends="init">
    <gomcompile example="${example}"/>
    <!--
    <tomcompile example="${example}"/>
    -->
    <tom.preset srcdir="${examples.dir}"
	        options="--noStatic"
                destdir="${examples.gen}">          
       <include name="${example}/**/*.t"/>
    </tom.preset>
    <javacompile example="${example}"/>
    <!-- copy resources in build -->
    <copy todir="${examples.build}/${example}">
      <fileset dir="${examples.dir}/${example}">
        <include name="*.gif"/>
        <include name="*.html"/>
      </fileset>
    </copy>
    <!-- Create a jar for the applet -->
    <path id="strategy.path"> <!-- ugly hack to find the jar -->
      <fileset dir="${tom.home}/lib">
        <include name="**/sl*.jar"/>
      </fileset>
    </path>
    <property name="sl.jar" refid="strategy.path"/>
    <jar jarfile="${examples.build}/${example}/boulder.jar">
      <fileset dir="${examples.build}">
        <include name="${example}/**/*.class"/>
        <include name="${example}/**/*.gif"/>
      </fileset>
      <zipfileset src="${tom.home}/lib/runtime/shared-objects.jar"/>
      <zipfileset src="${tom.home}/lib/runtime/jjtraveler.jar"/>
      <zipfileset src="${tom.home}/lib/runtime/aterm.jar" includes="aterm/*"/>
    </jar>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${example}/*.t"/>
        <include name="${example}/*.gom"/>
        <include name="${example}/*.gif"/>
        <include name="${example}/*.html"/>
        <include name="${example}/*.java"/>
      </zipfileset>
    </zip>
  </target>
</project>
