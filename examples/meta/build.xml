<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the meta example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="meta" value="meta"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${meta}"/>
    <delete dir="${examples.build}/${meta}"/>
  </target>
  <target name="build" depends="init">
    <tomcompile example="${meta}"/>
    <javacompile example="${meta}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${meta}/*.t"/>
      </zipfileset>
    </zip>
  </target>
</project>
