<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the gterm example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="gterm" value="gterm"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${gterm}"/>
    <delete dir="${examples.build}/${gterm}"/>
  </target>
  <target name="build" depends="init">
    <tomcompile example="${gterm}"/>
    <javacompile example="${gterm}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${gterm}/*.t"/>
        <include name="${gterm}/*.java"/>
      </zipfileset>
    </zip>
  </target>
</project>
