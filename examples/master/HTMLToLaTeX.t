package master;

import tom.library.xml.*;
import tom.library.adt.tnode.*;
import tom.library.adt.tnode.types.*;
import java.io.*;

import aterm.*;

import tom.library.strategy.mutraveler.MuTraveler;
import tom.library.strategy.mutraveler.MuStrategy;
import jjtraveler.reflective.VisitableVisitor;
import jjtraveler.Visitable;
import jjtraveler.VisitFailure;

public class HTMLToLaTeX {
  
  %include{ adt/tnode/TNode.tom }
  %include{ mutraveler.tom }
    
  public static void main (String args[]) {
    HTMLToLaTeX html2latex = new HTMLToLaTeX();
    if (args.length == 2) {
      html2latex.run(args[0],args[1]);
    } else {
      System.out.println("Usage : java HTMLToLaTeX file.html output.tex\n"+
                         "\tfile.html must be a valid XHTML file");
    }
  }

  private static FileWriter out;
  
  private static void write(String s) {
    try {
      out.write(s);
    } catch (IOException e) {
      System.out.println("Error in write");
    }
  }

  private void run(String filename, String output){
    try {
      out = new FileWriter(output);
      XmlTools xtools = new XmlTools();
      ATerm term = xtools.convertXMLToATerm(filename);
      toLaTeX(term);
      out.flush();
      out.close();
    } catch (IOException e) {
      System.out.println("Cannot open file "+output);
    }
  }
    
  private static boolean firstLine, firstCol;

  private static void toLaTeX(ATerm subject) {
    VisitableVisitor rule = `ToLaTeX();
    try {
      System.out.println("subject = " + subject);
      MuTraveler.init(`TopDownCollect(ToLaTeX())).visit(subject);
    } catch (VisitFailure e) {
      System.out.println("reduction failed on: " + subject);
    }
  }

  %strategy ToLaTeX() extends `Identity() {
    visit TNode {
      <html><head>h*</head> <body>b*</body> </html> -> {
        write("\\documentclass{article}\n");
        toLaTeX(`h);
        write("\\begin{document}\n\\maketitle\n");
        toLaTeX(`b);
        write("\\end{document}\n");
        `Fail().visit(null);
      }
      <title>#TEXT(title)</title> -> {
        write("\\title{"+`title+"}\n\\author{}\n"+
            "\\date{Auto-generated by HTMLToLaTeX}\n");
        `Fail().visit(null);
      }
      <p>data*</p> -> { toLaTeX(`data); `Fail().visit(null); }
      <pre>data*</pre> -> { toLaTeX(`data); `Fail().visit(null); }
      <blockquote>data*</blockquote> -> { toLaTeX(`data); `Fail().visit(null); }
      <u>data*</u> -> { toLaTeX(`data); `Fail().visit(null); }
      <s>data*</s> -> { toLaTeX(`data); `Fail().visit(null); }
      <strike>data*</strike> -> { toLaTeX(`data); `Fail().visit(null); }
      <font>data*</font> -> { toLaTeX(`data); `Fail().visit(null); }
      <basefont>data*</basefont> -> { toLaTeX(`data); `Fail().visit(null); }
      <h1>h*</h1> -> {
        write("\\section{");
        toLaTeX(`h);
        write("}\n");
        `Fail().visit(null);
      }
      <h2>h*</h2> -> {
        write("\\subsection{");
        toLaTeX(`h);
        write("}\n");
        `Fail().visit(null);
      }
      <h3>h*</h3> -> {
        write("\\subsubsection{");
        toLaTeX(`h);
        write("}\n");
        `Fail().visit(null);
      }
      <h4>h*</h4> -> {
        write("\\subsubsubsection{");
        toLaTeX(`h);
        write("}\n");
        `Fail().visit(null);
      }
      <h5>h*</h5> -> {
        write("\\subsubsubsubsection{");
        toLaTeX(`h);
        write("}\n");
        `Fail().visit(null);
      }
      <h6>h*</h6> -> {
        write("\\subsubsubsubsubsection{");
        toLaTeX(`h);
        write("}\n");
        `Fail().visit(null);
      }
      <ul>data*</ul> -> {
        write("\\begin{itemize}\n");
        toLaTeX(`data);
        write("\\end{itemize}\n");
        `Fail().visit(null);
      }
      <ol>data*</ol> -> {
        write("\\begin{enumerate}\n");
        toLaTeX(`data);
        write("\\end{enumerate}\n");
        `Fail().visit(null);
      }
      <dl>data*</dl> -> {
        write("\\begin{description}\n");
        toLaTeX(`data);
        write("\\end{description}\n");
        `Fail().visit(null);
      }
      <a href=hrefurl>data*</a> -> {
        toLaTeX(`data);
        //write(" (URL :"+hrefurl+") ");
        `Fail().visit(null);
      }
      <img alt=text/> -> {
        write("img : "+`text);
        `Fail().visit(null);
      }
      
      <(li|dd|dt)>data*</(li|dd|dt)> -> { write("\\item "); toLaTeX(`data); write("\n"); `Fail().visit(null); }

      <code>data*</code> -> {
        write("{\\tt ");
        toLaTeX(`data);
        write("}");
        `Fail().visit(null);
      }
      <tt>data*</tt> -> {
        write("{\\tt ");
        toLaTeX(`data);
        write("}");
        `Fail().visit(null);
      }
      <i>data*</i> -> {
        write("{\\it ");
        toLaTeX(`data);
        write("}");
        `Fail().visit(null);
      }
      <b>data*</b> -> {
        write("{\\bf ");
        toLaTeX(`data);
        write("}");
        `Fail().visit(null);
      }
      <big>data*</big> -> {
        write("{\\big ");
        toLaTeX(`data);
        write("}");
        `Fail().visit(null);
      }
      <small>data*</small> -> {
        write("{\\small ");
        toLaTeX(`data);
        write("}");
        `Fail().visit(null);
      }
      <em>data*</em> -> {
        write("{\\em ");
        toLaTeX(`data);
        write("}");
        `Fail().visit(null);
      }
      <br/> -> {
        write("\n\n");
        `Fail().visit(null);
      }
      <center>data*</center> -> {
        write("\\begin{center}\n");
        toLaTeX(`data);
        write("\\end{center}\n");
        `Fail().visit(null);
      }
      <meta content=c/> -> {
        write("% meta : content="+`c);
        `Fail().visit(null);
      }
      <link/> -> { `Fail().visit(null); }
      <style/> -> { `Fail().visit(null); }
      <table>data*</table> -> {
        write("\\begin{tabular}{");
        write(columnSpec(tableMaxCol(0,0,`data)));
        write("}\n");
        firstLine = true;
        toLaTeX(`data);
        write("\\end{tabular}\n");
        `Fail().visit(null);
      }
      <tr>data*</tr> -> {
        if (!firstLine) {
          write(" \\\\\n");
        } else {
          firstLine = false;
        }
        firstCol = true;
        toLaTeX(`data);
        `Fail().visit(null);
      }
      <td>data*</td> -> {
        if (!firstCol) {
          write(" & ");
        } else {
          firstCol = false;
        }
        toLaTeX(`data);
        `Fail().visit(null);
      }
      <th>data*</th> -> {
        if (!firstCol) {
          write(" & ");
        } else {
          firstCol = false;
        }
        write("{\\bf ");
        toLaTeX(`data);
        write("}");
        `Fail().visit(null);
      }
      <div id=id>data*</div> -> {
        write("\\label{"+`id+"}\n");
        toLaTeX(`data);
        `Fail().visit(null);
      }
      <div>data*</div> -> {
        toLaTeX(`data);
        `Fail().visit(null);
      }
      <hr/> -> { `Fail().visit(null); }
      <script/> -> { `Fail().visit(null); }

      #TEXT(text) -> {
        write(`text);
        `Fail().visit(null);
      }
      #COMMENT(text) -> {
        write("% "+`text);
        `Fail().visit(null);
      }
    } // end visit
  }

  private static String columnSpec(int nbCol) {
    if (nbCol == 0){
      return "";
    } else {
      return "l"+columnSpec(nbCol-1);
    }
  }

  %strategy ComputeWidth() extends `Identity() {
    visit TNode {
      <tr>data*</tr> -> {
        tableMaxCol(max,currentMax,`data);
        max = (max<currentMax ? currentMax : max);
        currentMax = 0;
        `Fail().visit(null);
      }
      <td/> -> { currentMax++; `Fail().visit(null); }
      <th/> -> { currentMax++; `Fail().visit(null); }
    }
  }

  private static int max, currentMax;
  private static int tableMaxCol(int vmax, int vcurrentMax, TNodeList subject) {
    max=vmax;
    currentMax=vcurrentMax;
    VisitableVisitor rule = `ComputeWidth();
    try {
      System.out.println("subject          = " + subject);
      MuTraveler.init(`TopDownCollect(ComputeWidth())).visit(subject);
    } catch (VisitFailure e) {
      System.out.println("reduction failed on: " + subject);
    }
    return max;
  }

}
