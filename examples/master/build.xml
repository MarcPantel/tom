<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the master example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="master" value="master"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${master}"/>
    <delete dir="${examples.build}/${master}"/>
  </target>
  <target name="build" depends="init">
    <tomcompile example="${master}"/>
    <javacompile example="${master}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${master}/README"/>
        <include name="${master}/*.t"/>
      </zipfileset>
    </zip>
  </target>

</project>
