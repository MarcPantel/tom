<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the dom example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="dom" value="dom"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${dom}"/>
    <delete dir="${examples.build}/${dom}"/>
  </target>
  <target name="build" depends="init">
    <tomcompile example="${dom}"/>
    <javacompile example="${dom}"/>
    <!-- copy resources -->
    <copy todir="${examples.build}/${dom}">
      <fileset dir="${examples.dir}/${dom}">
        <include name="*.xml"/>
      </fileset>
    </copy>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${dom}/*.t"/>
        <include name="${dom}/*.xml"/>
      </zipfileset>
    </zip>
  </target>
</project>
