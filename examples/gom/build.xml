<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the gom example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="example" value="gom"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${example}"/>
    <delete dir="${examples.build}/${example}"/>
  </target>
  <target name="build" depends="init">
    <gomcompile example="${example}"/>
    <tom.preset srcdir="${examples.dir}"
      options="--genIntrospector"
      destdir="${examples.gen}">          
      <include name="${example}/**/TestCarre.t"/>
    </tom.preset>
    <tom.preset srcdir="${examples.dir}"
      destdir="${examples.gen}">          
      <include name="${example}/**/*.t"/>
      <exclude name="${example}/**/TestCarre.t"/>
    </tom.preset> 
    <javacompile example="${example}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
      update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${example}/*.t"/>
        <include name="${example}/*.java"/>
        <include name="${example}/*.gom"/>
      </zipfileset>
    </zip>
  </target>
</project>
