<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the pom example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="pom" value="pom"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${pom}"/>
    <delete dir="${examples.build}/${pom}"/>
  </target>
  <target name="build" depends="init">
    <gomcompile example="${pom}"/>
    <!-- build parser -->
    <mkdir dir="${examples.gen}/${pom}"/>
    <tomantlr target="${pom}/SeqParser.g"
              outputdirectory="${examples.gen}/${pom}">
      <classpath refid="tom.classpath"/>
    </tomantlr>
    <pom srcfile="${examples.gen}/${pom}/SeqParserTokenTypes.txt"
         destdir="${examples.gen}"
         package="${pom}">
      <classpath refid="tom.classpath"/>
    </pom>
    <tomcompile example="${pom}"/>
    <javacompile example="${pom}"/>
    <!-- copy resources -->
    <copy todir="${examples.build}/${pom}">
      <fileset dir="${examples.dir}/${pom}">
        <include name="ex_current"/>
      </fileset>
    </copy>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${pom}/*.t"/>
        <include name="${pom}/*.g"/>
        <include name="${pom}/*.gom"/>
        <include name="${pom}/ex_current"/>
      </zipfileset>
    </zip>
  </target>
</project>
