<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the antlrmapper example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="antlrmapper" value="antlrmapper"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${antlrmapper}"/>
    <delete dir="${examples.build}/${antlrmapper}"/>
  </target>
  <target name="build" depends="init">
    <gomcompile example="${antlrmapper}"/>
    <!-- build parser -->
    <mkdir dir="${examples.gen}/${antlrmapper}"/>
    <tomantlr target="${antlrmapper}/SeqParser.g"
              outputdirectory="${examples.gen}/${antlrmapper}">
      <classpath refid="tom.classpath"/>
    </tomantlr>
    <antlrmapper srcfile="${examples.gen}/${antlrmapper}/SeqParserTokenTypes.txt"
         destdir="${examples.gen}"
         package="${antlrmapper}">
      <classpath refid="tom.classpath"/>
    </antlrmapper>
    <tomcompile example="${antlrmapper}"/>
    <javacompile example="${antlrmapper}"/>
    <!-- copy resources -->
    <copy todir="${examples.build}/${antlrmapper}">
      <fileset dir="${examples.dir}/${antlrmapper}">
        <include name="ex_current"/>
      </fileset>
    </copy>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${antlrmapper}/*.t"/>
        <include name="${antlrmapper}/*.g"/>
        <include name="${antlrmapper}/*.gom"/>
        <include name="${antlrmapper}/ex_current"/>
      </zipfileset>
    </zip>
  </target>
</project>
