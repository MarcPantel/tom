<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the analysis example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="analysis" value="analysis"/>
  <macrodef name="gompointercompile">
    <attribute name="example"/>
    <sequential>
      <gom.preset srcdir="${examples.dir}"
        package="@{example}" 
        pointer = "true"
        destdir="${examples.gen}">
        <include name="@{example}/*.gom"/>
      </gom.preset>
    </sequential>
  </macrodef>

  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${analysis}"/>
    <delete dir="${examples.build}/${analysis}"/>
  </target>
  <target name="build" depends="init">
  <!-- copy resources in build -->
    <copy todir="${examples.build}/${analysis}">
      <fileset dir="${examples.dir}/${analysis}">
      </fileset>
    </copy>
    <gompointercompile example="${analysis}"/>
    <tomcompile example="${analysis}"/>
    <javacompile example="${analysis}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${analysis}/*.t"/>
        <include name="${analysis}/*.tom"/>
        <include name="${analysis}/*.java"/>
        <include name="${analysis}/*.gom"/>
      </zipfileset>
    </zip>
  </target>
</project>
