<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the ted example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="ted" value="ted"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${ted}"/>
    <delete dir="${examples.build}/${ted}"/>
  </target>
  <target name="build" depends="init">
    <tom.preset srcdir="${examples.dir}"
                destdir="${examples.gen}"
	        optimize2="no">
      <include name="${ted}/**/*.t"/>
      <exclude name="${ted}/**/*.g.t"/>
    </tom.preset>
    <javacompile example="${ted}"/>
    <!-- copy resources -->
    <copy todir="${examples.build}/${ted}">
      <fileset dir="${examples.dir}/${ted}">
        <include name="*.ted"/>
        <include name="aterms"/>
      </fileset>
    </copy>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
         <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
           <include name="${ted}/example.aterm"/>
           <include name="${ted}/aterms"/>
           <include name="${ted}/*.ted"/>
           <include name="${ted}/**/*.t"/>
           <include name="${ted}/**/*.tom"/>
           <include name="${ted}/**/*.java"/>
      </zipfileset>
    </zip>
  </target>
</project>
