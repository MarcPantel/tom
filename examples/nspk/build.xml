<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the nspk example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="nspk" value="nspk"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${nspk}"/>
    <delete dir="${examples.build}/${nspk}"/>
  </target>
  <target name="build" depends="init">
    <gomcompile example="${nspk}"/>
    <tomcompile example="${nspk}"/>
    <javacompile example="${nspk}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${nspk}/*.t"/>
        <include name="${nspk}/*.java"/>
        <include name="${nspk}/*.gom"/>
      </zipfileset>
    </zip>
  </target>

</project>
