<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the gomoku example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="gomoku" value="gomoku"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${gomoku}"/>
    <delete dir="${examples.build}/${gomoku}"/>
  </target>
  <target name="build" depends="init">
    <gombuild example="${gomoku}"/>
    <tomcompile example="${gomoku}"/>
    <javacompile example="${gomoku}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${gomoku}/*.t"/>
        <include name="${gomoku}/*.gom"/>
      </zipfileset>
    </zip>
  </target>
</project>
