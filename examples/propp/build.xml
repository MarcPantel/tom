<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the propp example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="example" value="propp"/>
  <target name="build" depends="init">
    <gombuild example="${example}"/>
    <!-- build parser -->
    <tom.preset outputfile="${examples.gen}/${example}/SeqParser.g"
                options="-I ${examples.gen}/${example}"
                srcdir="${examples.dir}"> 
      <include name="${example}/**/SeqParser.g.t"/>
    </tom.preset>
    <mkdir dir="${examples.gen}/${example}"/>
    <tomantlr target="${examples.gen}/${example}/SeqParser.g"
              outputdirectory="${examples.gen}/${example}">
      <classpath refid="tom.classpath"/>
    </tomantlr>
    <tomcompile example="${example}"/>
    <javacompile example="${example}"/>
    <!-- copy resources -->
    <copy todir="${examples.build}/${example}">
      <fileset dir="${examples.dir}/${example}">
        <include name="examples"/>
        <include name="*.sty"/>
      </fileset>
    </copy>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${example}/*.t"/>
        <include name="${example}/*.gom"/>
        <include name="${example}/*.sty"/>
        <include name="${example}/examples"/>
      </zipfileset>
    </zip>
  </target>
</project>
