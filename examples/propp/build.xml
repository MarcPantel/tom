<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the propp example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="example" value="propp"/>
  <target name="build" depends="init">
    <gombuild/>
    <!-- build parser -->
    <tom.preset outputfile="${examples.gen}/${example}/SeqParser.g"
                import="${examples.gen}/${example}"
                srcdir="${examples.dir}"> 
      <include name="${example}/**/SeqParser.g.t"/>
    </tom.preset>
    <mkdir dir="${examples.gen}/${example}"/>
    <tomantlr target="${examples.gen}/${example}/SeqParser.g"
              outputdirectory="${examples.gen}/${example}">
      <classpath refid="tom.classpath"/>
    </tomantlr>
    <tomcompile/>
    <javacompile/>
    <!-- copy resources -->
    <copy todir="${examples.build}/${example}">
      <fileset dir="${examples.dir}/${example}">
        <include name="examples"/>
        <include name="*.sty"/>
      </fileset>
    </copy>
  </target>
  <property name="distribute" value="yes"/>
</project>
