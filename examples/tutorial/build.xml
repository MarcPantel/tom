<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the tutorial example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="tutorial" value="tutorial"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${tutorial}"/>
    <delete dir="${examples.build}/${tutorial}"/>
  </target>
  <target name="build" depends="init">
    <tomcompile example="${tutorial}"/>
    <javacompile example="${tutorial}"/>
    <copy todir="${examples.build}/${tutorial}">
      <fileset dir="${examples.dir}/${tutorial}">
        <include name="*.xml"/>
      </fileset>
    </copy>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${tutorial}/*.t"/>
        <include name="${tutorial}/*.java"/>
        <include name="${tutorial}/*.xml"/>
      </zipfileset>
    </zip>
  </target>
</project>
