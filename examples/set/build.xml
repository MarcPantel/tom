<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the set example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="set" value="set"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${set}"/>
    <delete dir="${examples.build}/${set}"/>
  </target>
  <target name="build" depends="init">
    <gomcompile example="${set}"/>
    <tomcompile example="${set}"/>
    <javacompile example="${set}"/>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${set}/*.t"/>
        <include name="${set}/*.gom"/>
      </zipfileset>
    </zip>
  </target>
</project>
