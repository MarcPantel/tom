<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the bytecode example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="example" value="bytecode"/>
  <target name="build" depends="common.build">
    <!-- copy resources in build -->
    <copy todir="${examples.build}/${example}">
      <fileset dir="${examples.dir}/${example}">
        <include name="*.xml"/>
        <exclude name="build.xml"/>
      </fileset>
    </copy>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${example}/*.t"/>
        <include name="${example}/*.tom"/>
        <include name="${example}/*.java"/>
        <include name="${example}/*.gom"/>
      </zipfileset>
    </zip>
  </target>
</project>
