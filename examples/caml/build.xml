<?xml version="1.0" encoding="UTF-8"?>
<project name="Build the caml example" default="build" basedir="..">
  <import file="../common.xml"/>
  <property name="example" value="caml"/>
  <target name="clean" description="Cleans examples directory">
    <delete dir="${examples.gen}/${caml}"/>
    <delete dir="${examples.build}/${caml}"/>
  </target>
  <target name="build" depends="init">
    <mkdir dir="${examples.gen}/${example}"/>
    <!-- build tom -->
    <tom destdir="${examples.gen}/${example}"
         srcdir="${examples.dir}"
         options="--camlCode -I ${tom.home}/share/jtom">
      <include name="${example}/**/*.t"/>
      <classpath refid="tom.classpath"/>
    </tom>
    <!-- copy resources in build -->
    <copy todir="${examples.build}/${example}">
      <fileset dir="${examples.gen}/${example}">
        <include name="*.ml"/>
      </fileset>
      <fileset dir="${examples.dir}/${example}">
        <include name="*.ml"/>
        <include name="Makefile"/>
        <include name="README"/>
      </fileset>
    </copy>
    <antcall target="caml.make"/>
  </target>
  <target name="caml.make" if="camlc.bin">
    <exec dir="${examples.build}/${example}" 
          failonerror="yes"
          executable="make">
      <arg line=""/>
      <env key="CAMLC" value="${camlc.bin}"/>
    </exec>
  </target>
  <target name="dist" depends="prepare.examples" if="distrib.zip">
    <zip destfile="${distrib.zip}" 
         update="yes">
      <zipfileset dir="${examples.dir}" prefix="examples" filemode="644">
        <include name="${example}/Makefile"/>
        <include name="${example}/*.t"/>
        <include name="${example}/mapping.tom"/>
        <include name="${example}/peanotype.ml"/>
        <include name="${example}/tomExtension.ml"/>
        <include name="${example}/tomList.ml"/>
      </zipfileset>
    </zip>
  </target>
</project>
